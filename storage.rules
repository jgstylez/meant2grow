rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Organization-scoped file access
    // Note: Storage rules cannot access Firestore directly
    // For now, allow authenticated users to access files in their organization folder
    // You can enhance this later with custom claims or token validation
    match /{organizationId}/{allPaths=**} {
      // Allow read/write for authenticated users
      // In production, you may want to add additional checks via Cloud Functions
      allow read, write: if request.auth != null;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

